<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         version="3.1"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
         http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">

    <!-- Supplier Servlets -->
    <servlet>
        <servlet-name>AddSupplier</servlet-name>
        <servlet-class>supplier.AddSupplierServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AddSupplier</servlet-name>
        <url-pattern>/addSupplier</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>EditSupplier</servlet-name>
        <servlet-class>supplier.EditSupplierServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>EditSupplier</servlet-name>
        <url-pattern>/editSupplier</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>DeleteSupplier</servlet-name>
        <servlet-class>supplier.DeleteSupplierServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>DeleteSupplier</servlet-name>
        <url-pattern>/deleteSupplier</url-pattern>
    </servlet-mapping>

    <!-- Feedback Management Servlets -->
    <servlet>
        <servlet-name>FeedbackServlet</servlet-name>
        <servlet-class>feedback1.FeedbackServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>FeedbackServlet</servlet-name>
        <url-pattern>/submitFeedback</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>ViewFeedbackServlet</servlet-name>
        <servlet-class>feedback1.ViewFeedbackServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ViewFeedbackServlet</servlet-name>
        <url-pattern>/viewFeedbacks</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>AdminFeedbackServlet</servlet-name>
        <servlet-class>feedback1.AdminFeedbackServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AdminFeedbackServlet</servlet-name>
        <url-pattern>/adminFeedbacks</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>DeleteFeedbackServlet</servlet-name>
        <servlet-class>feedback1.DeleteFeedbackServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>DeleteFeedbackServlet</servlet-name>
        <url-pattern>/deleteFeedback</url-pattern>
    </servlet-mapping>

</web-app>
